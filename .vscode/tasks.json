{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "MTL_SHADER_VALIDATION": "1",
            "MTL_SHADER_VALIDATION_GLOBAL_MEMORY": "1",
            "MTL_SHADER_VALIDATION_TEXTURE_USAGE": "1",
            "MTL_DEBUG_LAYER": "1",
            "METAL_DEVICE_WRAPPER_TYPE": "1",
        }
    },
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "source ~/.zshrc && zig build",
            "group": "none"
        },
        {
            "label": "Build and Run Project",
            "type": "shell",
            "command": "source ~/.zshrc && zig build ${input:zigLastTarget}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true,
                "reveal": "silent"
            },
            "problemMatcher": "$zig",
        },
        {
            "label": "Build and Run Project (release-fast)",
            "type": "shell",
            "command": "source ~/.zshrc && zig build ${input:zigLastTarget} -Doptimize=ReleaseFast",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Build and Run Project (release-small)",
            "type": "shell",
            "command": "source ~/.zshrc && zig build ${input:zigLastTarget} -Doptimize=ReleaseSmall",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Build and Run Project (release-small and no Dear ImGui)",
            "type": "shell",
            "command": "source ~/.zshrc && zig build ${input:zigLastTarget} -Doptimize=ReleaseSmall -Denable_imgui=false",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Test Project (zig build test)",
            "type": "shell",
            "command": "source ~/.zshrc && zig build test",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Build and Run Tests in Current File",
            "type": "shell",
            "command": "source ~/.zshrc && zig test ${file}",
            "problemMatcher": [],
            "presentation": {
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "zigLastTarget",
            "type": "command",
            "command": "zig.build.getLastTargetOrPrompt"
        }
    ],
}