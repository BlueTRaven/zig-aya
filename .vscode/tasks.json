{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "MTL_SHADER_VALIDATION": "1",
            "MTL_SHADER_VALIDATION_GLOBAL_MEMORY": "1",
            "MTL_SHADER_VALIDATION_TEXTURE_USAGE": "1",
            "MTL_DEBUG_LAYER": "1",
            "METAL_DEVICE_WRAPPER_TYPE": "1",
        }
    },
    "tasks": [
        {
            "label": "Build Project",
            "type": "shell",
            "command": "zig build",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "none"
        },
        {
            "label": "Build and Run Project",
            "type": "shell",
            "command": "zig build tester",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Build and Run Project (release-fast)",
            "type": "shell",
            "command": "zig build run -Doptimize=ReleaseFast",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Build and Run Project (release-small)",
            "type": "shell",
            "command": "zig build run -Doptimize=ReleaseSmall",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Test Project",
            "type": "shell",
            "command": "zig build test",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "Build and Run Tests in Current File",
            "type": "shell",
            "command": "zig test ${file}",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "clear": true
            },
            "group": "none"
        }
    ]
}